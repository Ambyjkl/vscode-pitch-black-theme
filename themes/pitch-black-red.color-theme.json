      "settings": {
        "foreground": "#ef9a9a"
      }
    },
    {
      "scope": "invalid",
      "settings": {
        "foreground": "#f44747"
      }
    },
    {
      "scope": "markup.underline",
      "settings": {
        "fontStyle": "underline"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "fontStyle": "bold",
        // "foreground": "#d32f2f"
      }
    },
    {
      "scope": "markup.heading",
      "settings": {
        "fontStyle": "bold",
